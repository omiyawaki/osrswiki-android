<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Title and status row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/item_saved_page_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            tools:text="Example Saved Page Title Which Can Be Quite Long" />

        <TextView
            android:id="@+id/item_saved_page_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="4dp"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?android:attr/textColorSecondary"
            android:background="@drawable/rounded_corners_4dp"
            android:textAllCaps="true"
            tools:text="SAVED" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_saved_page_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginTop="4dp"
        tools:text="Optional: Short description or last accessed date" />

    <TextView
        android:id="@+id/item_saved_page_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        tools:text="1.2 MB â€¢ Downloaded 2 hours ago"
        tools:visibility="visible" />

</LinearLayout>
