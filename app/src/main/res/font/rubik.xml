<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Regular -->
    <font
        android:fontStyle="normal"
        android:fontWeight="400"
        android:font="@font/rubik_regular" />
    <font
        android:fontStyle="italic"
        android:fontWeight="400"
        android:font="@font/rubik_italic" />
    
    <!-- Medium -->
    <font
        android:fontStyle="normal"
        android:fontWeight="500"
        android:font="@font/rubik_medium" />
    <font
        android:fontStyle="italic"
        android:fontWeight="500"
        android:font="@font/rubik_medium_italic" />
    
    <!-- SemiBold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="600"
        android:font="@font/rubik_semibold" />
    <font
        android:fontStyle="italic"
        android:fontWeight="600"
        android:font="@font/rubik_semibold_italic" />
    
    <!-- Bold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="700"
        android:font="@font/rubik_bold" />
    <font
        android:fontStyle="italic"
        android:fontWeight="700"
        android:font="@font/rubik_bold_italic" />
</font-family>