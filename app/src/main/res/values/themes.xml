<resources>
    <style name="Theme.OSRSWiki" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/osrs_dark_brown_primary</item>
        <item name="colorOnPrimary">@color/osrs_text_on_dark_primary</item>
        <item name="colorPrimaryContainer">@color/osrs_parchment_surface</item>
        <item name="colorOnPrimaryContainer">@color/osrs_text_on_parchment</item>

        <item name="colorSecondary">@color/osrs_gold_accent</item>
        <item name="colorOnSecondary">@color/osrs_text_on_gold</item>
        <item name="colorSecondaryContainer">@color/osrs_parchment_surface</item>
        <item name="colorOnSecondaryContainer">@color/pure_black</item>

        <item name="colorError">@color/md_theme_error</item>
        <item name="colorOnError">@color/md_theme_onError</item>

        <item name="android:colorBackground">@color/osrs_parchment_bg</item>
        <item name="colorOnBackground">@color/osrs_text_on_parchment</item>
        <item name="colorSurface">@color/osrs_parchment_bg</item>
        <item name="colorOnSurface">@color/osrs_text_on_parchment</item>
        <item name="colorSurfaceVariant">@color/osrs_parchment_bg</item>
        <item name="colorOnSurfaceVariant">@color/osrs_text_on_parchment</item>

        <item name="android:statusBarColor">@color/osrs_parchment_bg</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="placeholder_color">@color/osrs_dark_brown_primary</item>

        <item name="tabCountBackgroundColor">@android:color/transparent</item>
        <item name="tabCountTextColor">?attr/colorOnSurface</item>
        <item name="tabCountBorderColor">@android:color/transparent</item>

        <item name="search_box_background_color">#1A000000</item>

        <item name="popupMenuStyle">@style/App.Style.PopupMenu</item>
    </style>

    <style name="App.Style.PopupMenu" parent="Widget.Material3.PopupMenu.ListPopupWindow">
        <item name="android:popupBackground">@color/osrs_parchment_bg_dark_theme_value</item>
        <item name="textAppearanceListItemSmall">@style/App.TextAppearance.PopupMenu.Item</item>
    </style>

    <style name="App.TextAppearance.PopupMenu.Item" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>
